# InsightOps - Knowledge Decay Detection Engine

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# SQLite for local development, set DB_DIALECT=postgres for production
DB_DIALECT=sqlite
DB_STORAGE=./data/insightops.db

# PostgreSQL Configuration (uncomment for production)
# DB_DIALECT=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=insightops
# DB_USER=postgres
# DB_PASSWORD=your_password

# Decay Detection Thresholds (in days)
# These can be overridden per document type
DEFAULT_WARNING_DAYS=60
DEFAULT_CRITICAL_DAYS=180

# Confidence Scoring Weights
WEIGHT_AGE_PENALTY=0.3
WEIGHT_CONTRADICTION_PENALTY=0.4
WEIGHT_DRIFT_PENALTY=0.2
WEIGHT_SUPPORT_PENALTY=0.1

# Vector/Embedding Configuration
# Options: tfidf (default), openai (requires API key)
EMBEDDING_PROVIDER=tfidf

# OpenAI Configuration (if using OpenAI embeddings)
# OPENAI_API_KEY=your_openai_key
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Logging
LOG_LEVEL=info
